<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Update Profile</title>
  <!-- Link the existing stylesheet for consistent styling -->
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Update Your Profile</h1>

    <div class="box profile-form-box">

      <% if (errors && errors.length > 0) { %>
        <div class="error-message box">
          <p>⚠️ Please correct the following errors:</p>
          <ul>
            <% errors.forEach(function(error) { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <% if (success) { %>
        <div class="success-message box">
          <p>✅ Profile updated successfully!</p>
        </div>
      <% } %>

      <form action="/profile/update" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <label for="name">Adventurer Name:</label>
        <input type="text" id="name" name="name" value="<%= user?.name || '' %>" required class="form-input" />

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= user?.email || '' %>" required class="form-input" />

        <label for="bio">Bio:</label>
        <textarea id="bio" name="bio" rows="5" class="form-input"><%= user?.bio || '' %></textarea>

        <button type="submit" class="btn profile-submit-btn">Update Profile</button>
      </form>
      <div class="box back-link-box">
        <a href="/dashboard" class="btn back-btn">← Back to Dashboard</a>
      </div>
    </div>
  </div>
</body>
</html>